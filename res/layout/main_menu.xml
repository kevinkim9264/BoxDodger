<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/stickman_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/company_layout"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp" >

        <!-- Entering the name -->

        <EditText
            android:id="@+id/inputAddr"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dip"
            android:layout_marginTop="10dip"
            android:singleLine="true" />

        <!-- id -->

        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:layout_marginTop="10dip"
            android:text="name"
            android:textColor="#000000"
            android:textSize="20sp" />
        
        
        <!-- "Recent score" -->
        <TextView
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dip"
            android:layout_marginTop="10dip"
            android:text="Score"
            android:textColor="#000000"
            android:textSize="20sp"  
        />
        
        <!-- actual score value -->
        <TextView
            android:id="@+id/score"
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400dip"
            android:layout_marginTop="10dip"
            android:text="0"
            android:textColor="#000000"
            android:textSize="28sp"
            android:textStyle="bold"
        />
        
        
        
    </RelativeLayout>

    <!-- Game start button -->	
    <LinearLayout
        android:id="@+id/mark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Game Start"
            android:textColor="#888888"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Record visiting button -->
    <LinearLayout
        android:id="@+id/book"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="World Ranking"
            android:textColor="#888888"
            android:textSize="20sp" />
    </LinearLayout>
    
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
    
     	
        
        
    
</LinearLayout>